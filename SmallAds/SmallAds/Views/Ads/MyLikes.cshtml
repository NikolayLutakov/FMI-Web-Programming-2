@model SmallAds.Models.Ads.MyLikesAdVM
@using SmallAds.Entities
@{
    ViewBag.Title = "MyLikes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section">
    <h1 class="offset">MyLikes</h1>
    <div class="offset"><a class="button backBtn" href="/Users/Index">Back</a></div>
    <div class="grid">

        @foreach (Like like in Model.User.Likes)
        {
            <div class="cell">
                <h2 class="tileCenter">
                    @like.Ad.Title
                </h2>
                <p class="adText">
                    @like.Ad.Text
                </p>
                <div class="author right">
                    Author: @like.Ad.Creator.Username
                </div>
     

                <div class="right"><a class="button unlikeBtn" href="/Ads/Unlike?AdId=@like.Ad.Id&callView=MyLikes">Unlike</a></div>
            </div>
        }

    </div>
</div>
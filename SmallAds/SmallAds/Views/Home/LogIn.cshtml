@model SmallAds.Models.Home.LoginVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "LogIn";
}

<h1 class="tileCenter">LogIn</h1>
<form action="/Home/Login" method="post">
    <div class="grid offset">
        <div class="row">
            <div class="col-1">Username:</div>
            <div class="col-2">@Html.TextBoxFor(m => m.Username)</div>
            <div class="errorMsg col-3">@Html.ValidationMessageFor(m => m.Username)</div>
        </div>
        <div class="row">
            <div class="col-1">Password:</div>
            <div class="col-2">@Html.PasswordFor(m => m.Password)</div>
            <div class="errorMsg col-2">@Html.ValidationMessageFor(m => m.Password)</div>
        </div>
        <div class="row">
            <div class="errorMsg col-3">@Html.ValidationMessage("AutenticationFailed")</div>
        </div>
        
        <div class="row">
            <br />
            <div class="col-3"><input type="submit" value="Login" /></div>
        </div>
    </div>
</form>


